{
    "compilerOptions": {
        "outDir": "dist",
        "module": "Commonjs",
        "target": "esnext",
        "moduleResolution": "node",
        "declaration": true,
        "declarationMap": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": false,
        "composite": true,
        "jsx": "preserve",
        "lib": ["esnext"]
    }
}
